	OnInit() = {
		!wx.utils.CheckGuraVersion(nil, 0, 7, 0) && return(false)
		!wx.utils.CheckGuraPlatform(nil, [`mswin, `linux, `darwin]) && return(false)
		g.InitializeResource()
		g.LoadConfig()
		frame = MainFrame()
		frame.Show()
		true

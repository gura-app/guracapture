		strTmpl = textSubstPattern.GetValue()
		try {
			str = strTmpl.embed()
			textResult.SetForegroundColour(wx.BLACK)
			textResult.SetValue(str)
		} catch {|e|
			textResult.SetForegroundColour(wx.RED)
			textResult.SetValue(e.text)
		}
	}
